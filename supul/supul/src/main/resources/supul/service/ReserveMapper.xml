<mapper namespace="supul.service.ReserveMapper">	<!-- Mapper.java의 이름을 가져오면됨 -->
	
	<!-- 예약하기 -->
	<insert id="reserve" parameterType="rvDTO" >
		insert into reservation (rvnum, spot, type, title, users, playtime, rvdate, rvtime, id, pname, phone)
		values
		(#{rvnum}, #{spot}, #{type}, #{title}, #{users}, #{playtime}, #{rvdate}, #{rvtime},#{id}, #{pname}, #{phone})
	</insert>
	
	<!-- 모든 예약 보기 -->
	<select id="allreserve" resultType="rvDTO">
		select * from reservation
	</select>
	
	<!-- 예약 삭제 하기 -->
	<delete id="canclereserve" parameterType="rvDTO">
		delete from reservation where pname = #{pname} and rvdate = #{rvdate} and rvtime = #{rvtime}
	</delete>
	
	<!-- 예약자확인 -->
	<select id="chkreserve" resultType="rvDTO" parameterType="rvDTO">
		select * from reservation where id = #{id} and pname = #{pname}
	</select>
	
	<!-- 예약번호 중복확인 -->
	<select id="chkrvnum" resultType="Integer" parameterType="String">
		select count(*) from reservation where rvnum = #{rvnum}
	</select>
	
